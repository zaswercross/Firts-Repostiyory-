naranja = #DD4F24
azul = #22BCE0
gris_oscuro = #444

body
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px

header
	background gris_oscuro
	color white
	padding 0.5em  
	position relative
	overflow hidden
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	z-index 1

	.logo
		border-right 1px solid azul
		width 60px
		float left

		img 
			width 52px

	.titular
		margin 0 60px 0 70px

		.publicar
			background naranja
			color white
			margin -5px 1em 0 0
			padding 0.2em 0.5em
			text-decoration none
			font-style italic
			text-shadow 1px 1px 0px black
			float right


		.filtro
			font-weight bold
			font-size 14px
			color azul
			font-style italic
			text-decoration none

		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0
	.usuario
		position absolute
		top 10px
		right 10px

		.avatar
			margin 0 1em 0 0
			z-index 2
			position relative
			
			img
				width 50px
				border-radius 50%

		.flechita
			background naranja
			color white
			display block
			text-align right
			position absolute
			width 50%
			top 15px
			padding 3px
			right 0
			z-index 0
nav
	background azul
	border-left 15px solid white
	position relative
	
	&:before
		content ""
		border-bottom 20px solid transparent
		border-top 20px solid transparent
		border-left 7px solid white
		position absolute
		left 0
		top 0

	.menu
		height 40px
		line-height 40px
		margin 0
		overflow-x auto
		text-align left
		white-space nowrap
		padding 0

		li
			display inline-block

			a 
				color white
				display inline-block
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none

.posts
	padding 0.5em

	.post
		background white



